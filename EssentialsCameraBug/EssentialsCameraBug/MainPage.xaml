<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialsCameraBug.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Xamarin Essentials Camera Bug Demo" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Picture taken:"/>
        <Image Source="{Binding CapturedPicture}"
               HeightRequest="400"/>
        <Button Text="Take Picture"
                Command="{Binding TakePictureCommand}"/>
    </StackLayout>

</ContentPage>
